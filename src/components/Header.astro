<header>
  <nav
    class="flex justify-around items-center p-4 border-b border-gray-600 relative"
  >
    <div class="flex items-center space-x-2">
      <h3 class="text-2xl font-bold">
        Camilo <span class="font-semibold text-sky-600 dark:text-sky-600"
          >Portfolio</span
        >
      </h3>
    </div>
    <!-- Botón hamburguesa solo visible en pantallas pequeñas -->
    <button
      id="menu-btn"
      class="md:hidden flex flex-col justify-center items-center w-8 h-8 focus:outline-none"
      aria-label="Abrir menú"
      type="button"
    >
      <span
        class="block w-6 h-0.5 bg-gray-700 dark:bg-gray-200 mb-1.5 transition-all duration-300 transform"
        id="bar1"></span>
      <span
        class="block w-6 h-0.5 bg-gray-700 dark:bg-gray-200 mb-1.5 transition-all duration-300"
        id="bar2"></span>
      <span
        class="block w-6 h-0.5 bg-gray-700 dark:bg-gray-200 transition-all duration-300 transform"
        id="bar3"></span>
    </button>
    <!-- Menú de navegación mejorado -->
    <ul
      id="menu"
      class="flex-col md:flex-row md:flex space-y-6 md:space-y-0 space-x-0 md:space-x-6 absolute md:static top-full left-0 w-full md:w-auto bg-white dark:bg-gray-900 md:bg-transparent md:dark:bg-transparent p-6 md:p-0 shadow-lg md:shadow-none z-10 transition-all duration-300 ease-in-out origin-top transform scale-y-0 md:scale-y-100 opacity-0 md:opacity-100 hidden"
    >
      <li
        class="text-center border-b-2 border-gray-700 dark:border-gray-700 pb-4 md:border-b-0 md:pb-0 md:border-r-2 last:border-r-0 md:pr-6"
      >
        <a
          href="https://api.whatsapp.com/send/?phone=3196789453&text&type=phone_number&app_absent=0"
          class="block hover:text-sky-600 dark:hover:text-sky-600 transition-colors duration-200"
          >Contacto</a
        >
      </li>
      <li
        class="text-center border-b-2 border-gray-700 dark:border-gray-700 pb-4 md:border-b-0 md:pb-0 md:border-r-2 last:border-r-0 md:pr-6"
      >
        <a
          href="https://github.com/Milocam35"
          class="block hover:text-sky-600 dark:hover:text-sky-600 transition-colors duration-200"
          >Github</a
        >
        
      </li>
        <li
            class="text-center border-b-2 border-gray-700 dark:border-gray-700 pb-4 md:border-b-0 md:pb-0 md:border-r-2 last:border-r-0 md:pr-6">
          <a
            href="https://www.linkedin.com/in/camilo-millan-mahecha-100682251"
            class="block hover:text-sky-600 dark:hover:text-sky-600 transition-colors duration-200"
            >Linkedin</a
          >
        </li>
    </ul>
    
    <script type="module" is:inline>
      const btn = document.getElementById("menu-btn");
      const menu = document.getElementById("menu");
      const bars = [
        document.getElementById("bar1"),
        document.getElementById("bar2"),
        document.getElementById("bar3"),
      ];

      btn?.addEventListener("click", () => {
        const isOpen = menu.classList.contains("hidden");

        // Animación del menú
        if (isOpen) {
          menu.classList.remove("hidden");
          setTimeout(() => {
            menu.classList.remove("scale-y-0");
            menu.classList.remove("opacity-0");
          }, 10);
        } else {
          menu.classList.add("scale-y-0");
          menu.classList.add("opacity-0");
          setTimeout(() => {
            menu.classList.add("hidden");
          }, 300);
        }

        // Animación del botón hamburguesa a X
        if (isOpen) {
          bars[0].style.transform = "translateY(10px) rotate(45deg)";
          bars[1].style.opacity = "0";
          bars[2].style.transform = "translateY(-10px) rotate(-45deg)";
        } else {
          bars[0].style.transform = "";
          bars[1].style.opacity = "";
          bars[2].style.transform = "";
        }
      });
    </script>
  </nav>
</header>
