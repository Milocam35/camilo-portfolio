<script>
  const menuBtn = document.getElementById('menu-btn');
  const menu = document.getElementById('menu');
  const bar1 = document.getElementById('bar1');
  const bar2 = document.getElementById('bar2');
  const bar3 = document.getElementById('bar3');

  let isOpen = false;

  menuBtn?.addEventListener('click', () => {
    isOpen = !isOpen;

    if (isOpen) {
      // Abrir menú
      menu?.style.setProperty('max-height', menu.scrollHeight + 'px');
      menu?.classList.remove('opacity-0');
      menu?.classList.add('opacity-100');

      // Animar hamburguesa a X
      bar1?.classList.add('rotate-45', 'translate-y-2');
      bar2?.classList.add('opacity-0');
      bar3?.classList.add('-rotate-45', '-translate-y-2');
    } else {
      // Cerrar menú
      menu?.style.setProperty('max-height', '0');
      menu?.classList.remove('opacity-100');
      menu?.classList.add('opacity-0');

      // Restaurar hamburguesa
      bar1?.classList.remove('rotate-45', 'translate-y-2');
      bar2?.classList.remove('opacity-0');
      bar3?.classList.remove('-rotate-45', '-translate-y-2');
    }
  });

  // Cerrar menú al hacer clic en un enlace (mobile)
  const menuLinks = menu?.querySelectorAll('a');
  menuLinks?.forEach(link => {
    link.addEventListener('click', () => {
      if (isOpen) {
        menuBtn?.click();
      }
    });
  });
</script>
